<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Cpf</td>
            <td colspan="1">
        </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user[:name] %></td>
            <td><%= user[:email] %></td>
            <td><%= user[:cpf] %></td>
            <td><%= link_to 'Destroy', user_path(user[:id]), method: :delete, data: { confirm: "Are you sure you want to delete user with CPF #{user[:cpf]}?" } %></td>
        <tr>
    <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
