<p id="notice"><%= notice %></p>

<h1>Orders</h1>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Device model</td>
            <td>Imei</td>
            <td>Anual price</td>
            <td>Installments</td>
            <td colspan="3">
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
            <td><%= order.device_model %></td>
            <td><%= order.imei %></td>
            <td><%= order.anual_price %></td>
            <td><%= order.installments %></td>
            <td><%= link_to 'Show', order %></td>
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: "Are you sure you want to delete order #{order.device_model}?" } %></td>
        <tr>
    <% end %>
    </tbody>
</table>

<br>

